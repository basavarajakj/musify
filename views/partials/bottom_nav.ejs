<% 
  const navItems = [
    {
      href: '/',
      icon: 'home',
      text: 'Home'
    },
    {
      href: '/explore',
      icon: 'explore',
      text: 'Explore'
    },
    {
      href: '/album',
      icon: 'album',
      text: 'Album'
    },
    {
      href: '/playlist',
      icon: 'queue_music',
      text: 'Playlist'
    },
  ];
%>

<nav class="bottom-nav">

  <a href="/" class="logo bottom-nav-item">
    <div class="icon-wrapper">
      <img src="/images/favicon.svg" width="24" height="24"  class="small" alt="Musify logo">

      <img src="/images/logo.svg" width="94" height="24"  class="large" alt="Musify logo">
    </div>

    <p class="bottom-nav-text label-meidum">Musify</p>
  </a>

  <% navItems.forEach(({ href, icon, text}) => { %>
    <a href="<%=href%>" class="bottom-nav-item <%=locals.currentRoute === href ? 'active' : ''%>" data-bottom-nav-item>
      
      <div class="icon-wrapper">
        <span class="material-symbols-rounded icon">
          <%=icon%>
        </span>

        <div class="indicator"></div>
        <div class="state-layer"></div>
      </div>

      <p class="bottom-nav-text label-medium"><%=text%></p>
    </a>
  <% })  %>


</nav>